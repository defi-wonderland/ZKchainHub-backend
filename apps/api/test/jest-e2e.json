{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../../..",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "roots": ["<rootDir>/apps/"],
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@zkchainhub/providers(|/.*)$": "<rootDir>/libs/providers/src/$1",
        "^@zkchainhub/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    }
}
