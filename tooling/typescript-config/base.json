{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "paths": {
    "@hyperhub/*": ["packages/"]
  },
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "build", "dist"]
}
